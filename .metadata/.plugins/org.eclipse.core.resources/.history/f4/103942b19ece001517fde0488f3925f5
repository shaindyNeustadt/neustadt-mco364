package neustadt.mco364.colorku;

import java.awt.Color;
import java.awt.GridLayout;

import javax.swing.BorderFactory;
import javax.swing.JLabel;
import javax.swing.JPanel;


public class SudokuPanel1 extends JPanel{

	private Board board;
	private JLabel[][] grid;
	
	public SudokuPanel1(Board board) {
		setLayout(new GridLayout(9,9));
		this.board = board;
		this.grid = new JLabel[9][9];
		for(int x =0; x< 9; x++){
			for(int y = 0; y < 9; y++){
				grid[x][y] = new JLabel(" ");
				
				grid[x][y].setBorder(BorderFactory.createLineBorder(Color.RED));
				add(grid[x][y]);
			}
		}
	}
	
}